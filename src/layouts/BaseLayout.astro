---
interface Props {
  title: string;
  description?: string;
  ogType?: string;
  ogUrl?: string;
  schemaJson?: string;
}

const { 
  title, 
  description = '在技術與文明的交匯處，重建秩序、再生系統、守護人性尊嚴。',
  ogType = 'website',
  ogUrl = 'https://paulkuo.tw',
  schemaJson,
} = Astro.props;
---
<!DOCTYPE html>
<html lang="zh-Hant">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <meta name="description" content={description}>
  <meta name="author" content="Paul Kuo">
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:type" content={ogType}>
  <meta property="og:url" content={ogUrl}>
  <meta property="og:locale" content="zh_TW">
  <meta property="og:site_name" content="Paul Kuo">
  <meta property="og:image" content="https://paulkuo.tw/og-image.png">
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content={title}>
  <meta name="twitter:description" content={description}>
  <meta name="twitter:image" content="https://paulkuo.tw/og-image.png">
  <meta name="twitter:site" content="@paulkuo">
  <link rel="canonical" href={ogUrl}>
  <link rel="icon" type="image/png" href="/favicon.png">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+TC:wght@300;400;500;700&family=Playfair+Display:ital,wght@0,400;0,700;1,400&family=DM+Sans:ital,wght@0,400;0,500;0,700;1,400&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/styles/global.css">
  {schemaJson && <script type="application/ld+json" set:html={schemaJson} />}
  <slot name="head" />
</head>
<body>
  <nav>
    <div class="nav-inner">
      <a href="/" class="nav-logo">Paul Kuo</a>
      <div class="nav-links">
        <a href="/" id="nav-home">首頁</a>
        <a href="/blog" id="nav-blog">思想</a>
        <a href="/projects" id="nav-projects">專案</a>
        <a href="/about" id="nav-about">關於</a>
        <a href="/#contact" class="nav-cta">聯絡我</a>
      </div>
      <button class="nav-hamburger" id="hamburger-btn" aria-label="選單">
        <span></span><span></span><span></span>
      </button>
    </div>
  </nav>

  <main>
    <slot />
  </main>

  <footer>
    <span>© 2026 Paul Kuo. Built with conviction.</span>
  </footer>

  <script>
    document.getElementById('hamburger-btn')?.addEventListener('click', () => {
      const links = document.querySelector('.nav-links') as HTMLElement;
      if (links) links.style.display = links.style.display === 'flex' ? 'none' : 'flex';
    });

    // Highlight active nav
    const path = window.location.pathname;
    document.querySelectorAll('.nav-links a').forEach(a => {
      const href = a.getAttribute('href');
      if (href === path || (href !== '/' && path.startsWith(href!))) {
        a.classList.add('active');
      }
    });
  </script>
</body>
</html>
