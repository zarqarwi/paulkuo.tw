---
interface Props {
  title: string;
  description?: string;
  ogType?: string;
  ogUrl?: string;
  ogImage?: string;
  schemaJson?: string;
  canonicalUrl?: string;
}

const { 
  title, 
  description = '在技術與文明的交匯處，重建秩序、循環再利用、守護人性尊嚴。',
  ogType = 'website',
  ogUrl = 'https://paulkuo.tw',
  ogImage = 'https://paulkuo.tw/paul-photo.png',
  schemaJson,
  canonicalUrl,
} = Astro.props;

const canonical = canonicalUrl || Astro.url.href.replace(/\/$/, '') || ogUrl;

// Determine current lang from URL
const pathname = Astro.url.pathname;
const langMap: Record<string, string> = {
  '/en/': 'en',
  '/ja/': 'ja',
  '/zh-cn/': 'zh-CN',
};
const currentLang = Object.entries(langMap).find(([prefix]) => pathname.startsWith(prefix))?.[1] || 'zh-Hant';

// Build hreflang alternates
const basePath = pathname.replace(/^\/(en|ja|zh-cn)\//, '/');
const hreflangs = [
  { lang: 'zh-TW', href: `https://paulkuo.tw${basePath}` },
  { lang: 'en', href: `https://paulkuo.tw/en${basePath}` },
  { lang: 'ja', href: `https://paulkuo.tw/ja${basePath}` },
  { lang: 'zh-CN', href: `https://paulkuo.tw/zh-cn${basePath}` },
  { lang: 'x-default', href: `https://paulkuo.tw${basePath}` },
];

// Language switcher links — 指向當前頁面的對應語系版本
const langSwitchLinks = {
  'zh-Hant': basePath === '/' ? '/' : basePath,
  'en': `/en${basePath === '/' ? '/' : basePath}`,
  'ja': `/ja${basePath === '/' ? '/' : basePath}`,
  'zh-CN': `/zh-cn${basePath === '/' ? '/' : basePath}`,
};

// Nav widgets: Fitbit steps + AI collaboration time
import { readFileSync, existsSync } from 'fs';
import { join } from 'path';

let fitbitSteps = 0;
let fitbitGoal = 10000;
let fitbitWeek: number[] = [];
const fitbitPath = join(process.cwd(), 'data', 'fitbit.json');
if (existsSync(fitbitPath)) {
  try {
    const fb = JSON.parse(readFileSync(fitbitPath, 'utf-8'));
    fitbitSteps = fb.today?.steps || 0;
    fitbitGoal = fb.today?.goal || 10000;
    fitbitWeek = (fb.week || []).map((d: any) => d.steps || 0);
  } catch {}
}

let aiHoursMonth = 0;
let aiDaysMonth = 0;
const costsPath = join(process.cwd(), 'data', 'costs.jsonl');
if (existsSync(costsPath)) {
  try {
    const lines = readFileSync(costsPath, 'utf-8').split('\n').filter(Boolean);
    const thisMonth = new Date().toISOString().slice(0, 7);
    const monthDays = new Set<string>();
    lines.forEach(line => {
      const r = JSON.parse(line);
      if (r.timestamp?.startsWith(thisMonth)) monthDays.add(r.timestamp.slice(0, 10));
    });
    aiDaysMonth = monthDays.size;
    // Estimate ~2.5 hours per active day (based on typical session patterns)
    aiHoursMonth = Math.round(aiDaysMonth * 2.5);
  } catch {}
}
---

<!DOCTYPE html>
<html lang={currentLang}>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <meta name="description" content={description}>
  <meta name="author" content="Paul Kuo">
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:type" content={ogType}>
  <meta property="og:url" content={ogUrl}>
  <meta property="og:image" content={ogImage}>
  <meta property="og:locale" content={currentLang === 'zh-Hant' ? 'zh_TW' : currentLang === 'zh-CN' ? 'zh_CN' : currentLang === 'ja' ? 'ja_JP' : 'en_US'} />
  <meta property="og:site_name" content="Paul Kuo">
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content={title}>
  <meta name="twitter:description" content={description}>
  <meta name="twitter:image" content={ogImage}>
  <meta name="twitter:site" content="@paulkuo">
  <meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1">
  <link rel="canonical" href={canonical}>
  {hreflangs.map(h => (
    <link rel="alternate" hreflang={h.lang} href={h.href} />
  ))}
  <link rel="icon" href="/favicon.ico" sizes="32x32">
  <link rel="icon" type="image/png" href="/favicon.png" sizes="192x192">
  <link rel="apple-touch-icon" href="/favicon.png">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+TC:wght@300;400;500;700&family=Playfair+Display:ital,wght@0,400;0,700;1,400&family=DM+Sans:ital,wght@0,400;0,500;0,700;1,400&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/styles/global.css">
  {schemaJson && <script type="application/ld+json" set:html={schemaJson} />}
  <slot name="head" />
</head>
<body>
  <nav>
    <div class="nav-inner">
      <a href="/" class="nav-logo">Paul Kuo</a>
      <div class="nav-links">
        <a href="/" id="nav-home">首頁</a>
        <a href="/blog" id="nav-blog">思想</a>
        <a href="/projects" id="nav-projects">專案</a>
        <a href="/#feed" id="nav-feed">消息</a>
        <a href="/about" id="nav-about">關於</a>
        <a href="/#contact" class="nav-cta">聯絡我</a>
      </div>
      <div class="nav-widgets">
        <div class="nav-widget" title="今日步數">
          <svg class="nav-widget-icon" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M12 22c-4.97 0-9-2.69-9-6v-2c0-3.31 4.03-6 9-6s9 2.69 9 6v2c0 3.31-4.03 6-9 6z" opacity="0" />
            <path d="M13.5 2.5c-.3 0-.5.2-.5.5v2.5c0 .8-.7 1.5-1.5 1.5h-1c-.8 0-1.5.7-1.5 1.5v1c0 .5-.4 1-1 1s-1-.4-1-1V8c0-.8-.7-1.5-1.5-1.5S4 7.2 4 8v4l1 5.5M16 5c.8 0 1.5.7 1.5 1.5v2c0 .5.4 1 1 1s1-.5 1-1V6.5C19.5 5.1 18.4 4 17 4M14 9.5v3c0 .8.7 1.5 1.5 1.5h1.5l1 5.5" />
          </svg>
          <span class="nav-widget-value">{fitbitSteps.toLocaleString()}</span>
          <canvas class="nav-widget-spark" id="stepsSpark" width="36" height="16" data-values={JSON.stringify(fitbitWeek)}></canvas>
        </div>
        <div class="nav-widget" title="本月 AI 協作">
          <svg class="nav-widget-icon" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="10" />
            <polyline points="12 6 12 12 16 14" />
          </svg>
          <span class="nav-widget-value">{aiHoursMonth}h</span>
          <span class="nav-widget-sub">{aiDaysMonth}d</span>
        </div>
      </div>
      <div class="lang-switcher">
        <a href={langSwitchLinks['zh-Hant']} class:list={['lang-btn', { active: currentLang === 'zh-Hant' }]} aria-label="繁體中文">繁</a>
        <a href={langSwitchLinks['zh-CN']} class:list={['lang-btn', { active: currentLang === 'zh-CN' }]} aria-label="简体中文">简</a>
        <a href={langSwitchLinks['en']} class:list={['lang-btn', { active: currentLang === 'en' }]} aria-label="English">EN</a>
        <a href={langSwitchLinks['ja']} class:list={['lang-btn', { active: currentLang === 'ja' }]} aria-label="日本語">日</a>
      </div>
      <button class="nav-hamburger" id="hamburger-btn" aria-label="選單">
        <span></span><span></span><span></span>
      </button>
    </div>
  </nav>
  <script is:inline>
  (function(){
    var c=document.getElementById('stepsSpark');
    if(!c)return;
    var vals=JSON.parse(c.dataset.values||'[]');
    if(vals.length<2)return;
    var ctx=c.getContext('2d'),w=c.width,h=c.height;
    var max=Math.max.apply(null,vals),min=Math.min.apply(null,vals),r=max-min||1;
    ctx.beginPath();
    vals.forEach(function(v,i){
      var x=2+(i/(vals.length-1))*(w-4),y=2+(1-(v-min)/r)*(h-4);
      i===0?ctx.moveTo(x,y):ctx.lineTo(x,y);
    });
    ctx.strokeStyle=vals[vals.length-1]>=vals[0]?'#059669':'#DC2626';
    ctx.lineWidth=1.5;ctx.stroke();
  })();
  </script>

  <main>
    <slot />
  </main>

  <footer>
    <span>© 2026 Paul Kuo. Built with conviction.</span>
  </footer>

  <script>
    document.getElementById('hamburger-btn')?.addEventListener('click', () => {
      const switcher = document.querySelector('.lang-switcher') as HTMLElement;
      if (switcher) switcher.classList.toggle('mobile-open');
    });

    document.addEventListener('click', (e) => {
      const switcher = document.querySelector('.lang-switcher');
      const btn = document.getElementById('hamburger-btn');
      if (switcher && btn && !switcher.contains(e.target as Node) && !btn.contains(e.target as Node)) {
        switcher.classList.remove('mobile-open');
      }
    });

    // Highlight active nav
    const path = window.location.pathname;
    document.querySelectorAll('.nav-links a').forEach(a => {
      const href = a.getAttribute('href');
      if (href === path || (href !== '/' && path.startsWith(href!))) {
        a.classList.add('active');
      }
    });
  </script>
</body>
</html>
